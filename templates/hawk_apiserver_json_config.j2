{%- from "cluster/map.jinja" import cluster with context -%}

{
  "key": "/etc/hawk/hawk.key",
  "cert": "/etc/hawk/hawk.pem",
  "listen": "0.0.0.0",
  "port": {{ cluster.exporter.exposition_port|default(9001) }},
  "loglevel": "info",
  "route": [
    {
      "handler": "api/v1",
      "path": "/api/v1"
    },
    {
      "handler": "metrics",
      "path": "/metrics"
    },
    {
      "handler": "monitor",
      "path": "/monitor"
    },
    {
      "handler": "file",
      "path": "/",
      "target": "/usr/share/hawk/public"
    },
    {
      "handler": "proxy",
      "path": "/",
      "target": "http://127.0.0.1:7631"
    }
  ]
}
